<div class="container mt-5">
  <div class="row mb-4">
    <div class="col">
      <%= link_to "従業員情報登録", new_admin_user_path, class: "btn btn-primary mb-2" %>
      <%= link_to "部署名一覧", admin_departments_path, class: "btn btn-primary mb-2" %>
      <%= link_to "スキル名一覧", admin_skills_path, class: "btn btn-primary mb-2" %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col text-center">
      <h2 class="list-group-title text-center border border-secondary p-2 bg-secondary text-white">従業員一覧</h2>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <ul class="list-group">
        <% @users.each do |user| %>
          <li class="list-group-item text-center">
            <%= link_to user.name, admin_user_path(user), class: "text-decoration-none" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col d-flex justify-content-center">
      <%= paginate @users, class: "pagination" %>
    </div>
  </div>
</div>