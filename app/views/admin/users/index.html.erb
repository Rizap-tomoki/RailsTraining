<div class="container mt-2">

  <div class="row mt-4">
    <div class="d-flex justify-content-center mt-4">
      <%= paginate @users, theme: 'bootstrap-5' %>
    </div>
  </div>

  <div class="row mt-4 mb-4">
    <div class="col text-center mx-5">
      <h2 class="list-group-title text-center border border-secondary p-2 bg-secondary text-white">従業員一覧</h2>
      <ul class="list-group">
      <% @users.each do |user| %>
        <li class="list-group-item text-center">
          <%= link_to "#{user.name} (#{user.hiragana_nama})".html_safe, admin_user_path(user), class: "text-decoration-none" %>      </li>
        </li>
      <% end %>
    </ul>
    </div>
  </div>

</div>