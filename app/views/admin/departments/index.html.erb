<% content_for :breadcrumbs do %>
  <%= add_breadcrumb '従業員一覧', admin_users_path %>
  <%= add_breadcrumb '部署一覧', admin_departments_path %>
<% end %>
<div class="container mt-5">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="row justify-content-center mb-1">
        <div class="col-md-6">
          <div class="text-center">
            <h2 class="list-group-title text-center border border-secondary p-2 bg-secondary text-white">部署一覧</h2>
          </div>
        </div>
      </div>
      <div class="col-md-6"> 
        <ul class="list-group">
          <% @departments.each do |department| %>
            <li class="list-group-item text-center">
              <%= link_to department.name, admin_department_path(department), class: "text-decoration-none" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>