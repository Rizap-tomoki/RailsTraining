<h1>部署名詳細ページ</h1>
<div class="department_detail">
  <label>部署名:</label><%= @department.name %>
  <% @department.users.each do |user| %>
    <li><%= user.name %></li>
  <% end %> 
</div>
<ul>
  <li><%= link_to "Edit", edit_admin_department_path(@department) %></li>
  <li><%= link_to "Destroy", admin_department_path(@department), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>
<%= link_to "部署一覧に戻る", admin_departments_path %>