<% if @department.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@department.errors.count, "error") %>が原因でこの記事を保存できませんでした</h2>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <%= form_with model: @department, url: [:admin, @department], local: true, class: "needs-validation" do |form| %>
            <div class="department_form">
              <div class="mb-3">
                <%= form.label :name, "部署名", class: "form-label" %>
                <%= form.text_field :name, class: "form-control", placeholder: "例: プロダクト開発統括1部" %>
                <% @department.errors.full_messages_for(:name).each do |message| %>
                  <div class="text-danger"><%= message %></div>
                <% end %>
              </div>

              <div class="mb-3 text-center">
                <%= form.submit "送信", class: "btn btn-primary" %>
              </div>

              <div class="text-center">
                <%= link_to "部署一覧に戻る", admin_departments_path, class: "btn btn-secondary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>