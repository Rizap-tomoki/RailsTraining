<% if flash[:alert] %>
    <%= flash[:alert] %>
<% end %>
<h1>Login</h1>
<%= form_with(url: admin_session_path) do |form| %>
    <%= form.label :mail %>
    <%= form.email_field :mail, required: true %>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
    <%= form.submit "ログイン" %>
<% end %>
<%= button_to "Google認証でログイン", "/auth/google_oauth2", data: { turbo: false } %>
<%= link_to "一覧に戻る", users_path %>