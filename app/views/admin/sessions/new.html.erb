<% content_for :breadcrumbs do %>
    <%= add_breadcrumb '従業員一覧', root_path %>
    <%= add_breadcrumb 'ログイン', new_admin_session_path %>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
        <h2 class="card-title text-center border border-secondary p-2 bg-secondary text-white">ログイン画面</h2>
          <%= form_with(url: admin_session_path, local: true, class: "mt-4") do |form| %>
            <div class="form-group">
              <%= form.label :mail, "メールアドレス", class: "form-label mt-3" %>
              <%= form.email_field :mail, required: true, class: "form-control", placeholder: "example@aa.com" %>
            </div>
            <div class="form-group">
              <%= form.label :password, "パスワード", class: "form-label mt-3" %>
              <%= form.password_field :password, required: true, class: "form-control", placeholder: "Password" %>
            </div>
            <button type="submit" class="btn btn-primary btn-block mt-3">ログイン</button>
          <% end %>
            <p class="mt-4">Googleアカウントを持っている方</p>
            <%= button_to "Google認証でログイン", "/auth/google_oauth2", data: { turbo: false }, class: "btn btn-primary btn-block mt-3" %>
            <p class="mt-4">アカウントを持っていない方</p>
            <%= link_to "新規アカウント作成", "/admin/users/new", class: "btn btn-danger btn-block mt-3" %>
        </div>
      </div>
      <div class="text-center mt-3">
        <%= link_to "従業員一覧に戻る", users_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>