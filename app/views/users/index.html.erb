<div class="container">
  <div class="bg-light search mt-4">
    <div class="row justify-content-center">
      <div class="d-flex justify-content-center p-3">
        <%= form_with(url: users_path, method: :get, local: true, class: "row g-3 align-items-end") do |form| %>
          <div class="col-auto">
            <%= form.text_field :name, value: @name , placeholder: "氏名", class: "form-control" %>
          </div>
          <div class="col-auto">
            <%= form.label :address1, "都道府県:", class: "form-label" %>
            <%= form.select :address1, @users.address1s, prompt: '選択してください', selected: @address1, class: "form-select custom-select" %>
          </div>
          <div class="col-auto">
            <%= form.label :order, "並び順:", class: "form-label" %>
            <%= form.select :order, [["誕生日：新しい順", 'birthday DESC'], ["誕生日：古い順", 'birthday ASC']], selected: @order, class: "form-select custom-select" %>
          </div>
          <div class="col-auto">
            <%= form.label :per_page, "ページ数:", class: "form-label" %>
            <%= form.select :per_page, [10, 50, 100], prompt: '選択してください', selected: @per_page, class: "form-select custom-select" %>
          </div>
          <div class="col-auto">
            <%= form.submit '検索する', class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <ul class="list-group mt-4">
    <h2 class="list-group-title text-center border border-secondary p-2 bg-secondary text-white">従業員一覧</h2>
    <% @users.each do |user| %>
      <li class="list-group-item text-center">
        <%= link_to user.name, user_path(user) %>
      </li>
    <% end %>
  </ul>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @users %>
  </div>
</div>